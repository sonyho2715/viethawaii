// VietHawaii Platform - Prisma Schema
// Vietnamese-Hawaiian Community Platform

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== AUTH (NextAuth) ====================

model User {
  id              String    @id @default(uuid())
  name            String?
  email           String    @unique
  emailVerified   DateTime?
  image           String?
  passwordHash    String?
  phone           String?
  role            Role      @default(USER)
  preferredLang   String    @default("vn")
  trustScore      Int       @default(0)
  phoneVerified   Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  lastLogin       DateTime?

  accounts        Account[]
  sessions        Session[]
  listings        Listing[]
  articles        Article[]
  savedItems      SavedItem[]
  reviews         Review[]    @relation("ReviewAuthor")
  receivedReviews Review[]    @relation("ReviewTarget")
  reports         Report[]    @relation("Reporter")
  reviewedReports Report[]    @relation("Reviewer")
  transactions    Transaction[]
  businesses      Business[]
  adminLogs       AdminLog[]
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  USER
  SELLER
  EDITOR
  MODERATOR
  ADMIN
  SUPERADMIN
}

// ==================== CATEGORIES ====================

model Category {
  id          Int        @id @default(autoincrement())
  parentId    Int?
  slug        String     @unique
  nameVn      String
  nameEn      String?
  icon        String?
  sortOrder   Int        @default(0)
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())

  parent      Category?  @relation("CategoryChildren", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryChildren")
  listings    Listing[]

  @@index([parentId])
  @@index([slug])
}

// ==================== LISTINGS ====================

model Listing {
  id              Int       @id @default(autoincrement())
  userId          String
  categoryId      Int
  neighborhoodId  Int?

  title           String
  titleEn         String?
  description     String?   @db.Text
  descriptionEn   String?   @db.Text

  price           Decimal?  @db.Decimal(12, 2)
  priceType       PriceType @default(FIXED)

  location        String?
  lat             Decimal?  @db.Decimal(10, 8)
  lng             Decimal?  @db.Decimal(11, 8)

  contactPhone    String?
  contactEmail    String?
  zaloNumber      String?
  hidePhone       Boolean   @default(false)
  preferredContact String?

  status          ListingStatus @default(PENDING)
  rejectionReason String?

  isFeatured      Boolean   @default(false)
  featuredUntil   DateTime?
  featuredTier    String?

  views           Int       @default(0)

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  approvedAt      DateTime?
  expiresAt       DateTime?

  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category        Category  @relation(fields: [categoryId], references: [id])
  neighborhood    Neighborhood? @relation(fields: [neighborhoodId], references: [id])
  images          ListingImage[]
  tags            ListingTag[]
  savedBy         SavedItem[]
  reviews         Review[]
  reports         Report[]
  inquiries       Inquiry[]

  @@index([userId])
  @@index([categoryId])
  @@index([status])
  @@index([isFeatured])
  @@index([createdAt(sort: Desc)])
}

model ListingImage {
  id           Int      @id @default(autoincrement())
  listingId    Int
  imageUrl     String
  thumbnailUrl String?
  cloudinaryId String?
  isPrimary    Boolean  @default(false)
  sortOrder    Int      @default(0)
  createdAt    DateTime @default(now())

  listing      Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@index([listingId])
}

model ListingTag {
  listingId Int
  tag       String

  listing   Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@id([listingId, tag])
}

enum PriceType {
  FIXED
  HOURLY
  MONTHLY
  NEGOTIABLE
  FREE
}

enum ListingStatus {
  PENDING
  ACTIVE
  SOLD
  EXPIRED
  REJECTED
  FLAGGED
}

// ==================== NEIGHBORHOODS ====================

model Neighborhood {
  id                  Int      @id @default(autoincrement())
  slug                String   @unique
  name                String
  island              String   @default("Oahu")
  region              String?
  vietnameseCommunity String?
  avgRent1br          Int?
  avgRent2br          Int?
  lat                 Decimal? @db.Decimal(10, 8)
  lng                 Decimal? @db.Decimal(11, 8)
  descriptionVn       String?  @db.Text
  descriptionEn       String?  @db.Text

  listings            Listing[]
  businesses          Business[]
}

// ==================== ARTICLES / CONTENT ====================

model ContentCategory {
  id        Int         @id @default(autoincrement())
  slug      String      @unique
  nameVn    String
  nameEn    String?
  type      ContentType
  color     String?
  sortOrder Int         @default(0)
  isActive  Boolean     @default(true)

  articles  Article[]
}

model Article {
  id              Int           @id @default(autoincrement())
  authorId        String
  categoryId      Int
  slug            String        @unique

  titleVn         String
  titleEn         String?
  excerptVn       String?       @db.Text
  excerptEn       String?       @db.Text
  contentVn       String        @db.Text
  contentEn       String?       @db.Text

  featuredImage   String?
  videoUrl        String?
  videoThumbnail  String?

  contentType     ArticleType   @default(ARTICLE)
  status          ArticleStatus @default(DRAFT)

  isSponsored     Boolean       @default(false)
  sponsorName     String?
  sponsorLogo     String?

  views           Int           @default(0)

  seoTitle        String?
  seoDescription  String?

  publishedAt     DateTime?
  scheduledFor    DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  author          User          @relation(fields: [authorId], references: [id])
  category        ContentCategory @relation(fields: [categoryId], references: [id])
  tags            ArticleTag[]
  savedBy         SavedItem[]

  @@index([authorId])
  @@index([categoryId])
  @@index([status])
  @@index([publishedAt(sort: Desc)])
  @@index([slug])
}

model ArticleTag {
  articleId Int
  tag       String

  article   Article @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@id([articleId, tag])
}

enum ContentType {
  NEWS
  BLOG
  VLOG
  GUIDE
}

enum ArticleType {
  ARTICLE
  VLOG
  GUIDE
  SPONSORED
}

enum ArticleStatus {
  DRAFT
  PUBLISHED
  SCHEDULED
  ARCHIVED
}

// ==================== SAVED ITEMS ====================

model SavedItem {
  userId    String
  itemType  SavedItemType
  itemId    Int
  savedAt   DateTime      @default(now())

  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  listing   Listing?      @relation(fields: [itemId], references: [id], onDelete: Cascade, map: "SavedItem_listing_fkey")
  article   Article?      @relation(fields: [itemId], references: [id], onDelete: Cascade, map: "SavedItem_article_fkey")

  @@id([userId, itemType, itemId])
}

enum SavedItemType {
  LISTING
  ARTICLE
}

// ==================== REVIEWS ====================

model Review {
  id              Int      @id @default(autoincrement())
  reviewerId      String
  reviewedUserId  String
  listingId       Int?
  rating          Int
  reviewText      String?  @db.Text
  transactionType String?
  isVerified      Boolean  @default(false)
  createdAt       DateTime @default(now())

  reviewer        User     @relation("ReviewAuthor", fields: [reviewerId], references: [id])
  reviewedUser    User     @relation("ReviewTarget", fields: [reviewedUserId], references: [id])
  listing         Listing? @relation(fields: [listingId], references: [id])

  @@unique([reviewerId, listingId])
  @@index([reviewedUserId])
}

// ==================== REPORTS ====================

model Report {
  id           Int          @id @default(autoincrement())
  reporterId   String
  itemType     String
  itemId       Int
  reason       String
  details      String?      @db.Text
  status       ReportStatus @default(PENDING)
  reviewedById String?
  reviewedAt   DateTime?
  actionTaken  String?
  createdAt    DateTime     @default(now())

  reporter     User         @relation("Reporter", fields: [reporterId], references: [id])
  reviewedBy   User?        @relation("Reviewer", fields: [reviewedById], references: [id])
  listing      Listing?     @relation(fields: [itemId], references: [id])

  @@index([status])
}

enum ReportStatus {
  PENDING
  REVIEWED
  ACTIONED
  DISMISSED
}

// ==================== INQUIRIES ====================

model Inquiry {
  id         Int      @id @default(autoincrement())
  listingId  Int
  senderId   String?
  message    String   @db.Text
  phone      String?
  email      String?
  status     String   @default("new")
  createdAt  DateTime @default(now())

  listing    Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@index([listingId])
}

// ==================== BUSINESS DIRECTORY ====================

model Business {
  id              Int          @id @default(autoincrement())
  ownerId         String
  name            String
  slug            String       @unique
  category        String
  descriptionVn   String?      @db.Text
  descriptionEn   String?      @db.Text
  address         String?
  neighborhoodId  Int?
  phone           String?
  email           String?
  website         String?
  hours           Json?
  photos          Json?
  tier            BusinessTier @default(FREE)
  tierExpiresAt   DateTime?
  isVerified      Boolean      @default(false)
  rating          Decimal?     @db.Decimal(3, 2)
  reviewCount     Int          @default(0)
  views           Int          @default(0)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  owner           User         @relation(fields: [ownerId], references: [id])
  neighborhood    Neighborhood? @relation(fields: [neighborhoodId], references: [id])
  reviews         BusinessReview[]

  @@index([category])
  @@index([tier])
}

model BusinessReview {
  id           Int      @id @default(autoincrement())
  businessId   Int
  userId       String
  rating       Int
  reviewText   String?  @db.Text
  photos       Json?
  helpfulCount Int      @default(0)
  createdAt    DateTime @default(now())

  business     Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  @@index([businessId])
}

enum BusinessTier {
  FREE
  ENHANCED
  PREMIUM
}

// ==================== MONETIZATION ====================

model FeaturedPackage {
  id           Int      @id @default(autoincrement())
  nameVn       String
  nameEn       String?
  durationDays Int
  price        Decimal  @db.Decimal(10, 2)
  benefits     Json?
  isActive     Boolean  @default(true)
  sortOrder    Int      @default(0)
}

model Transaction {
  id              Int      @id @default(autoincrement())
  userId          String
  type            String
  referenceType   String?
  referenceId     Int?
  amount          Decimal  @db.Decimal(10, 2)
  currency        String   @default("USD")
  stripePaymentId String?
  stripeInvoiceId String?
  status          String   @default("pending")
  createdAt       DateTime @default(now())

  user            User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([createdAt(sort: Desc)])
}

// ==================== ANALYTICS ====================

model PageView {
  id        Int      @id @default(autoincrement())
  pageType  String
  pageId    Int?
  userId    String?
  sessionId String?
  referrer  String?
  viewedAt  DateTime @default(now())

  @@index([viewedAt(sort: Desc)])
  @@index([pageType, pageId])
}

model ToolUsage {
  id         Int      @id @default(autoincrement())
  toolSlug   String
  userId     String?
  sessionId  String?
  inputs     Json?
  completed  Boolean  @default(false)
  ctaClicked Boolean  @default(false)
  referrer   String?
  createdAt  DateTime @default(now())

  @@index([toolSlug])
  @@index([createdAt(sort: Desc)])
}

// ==================== ADMIN ====================

model AdminLog {
  id        Int      @id @default(autoincrement())
  adminId   String
  action    String
  itemType  String?
  itemId    Int?
  details   Json?
  createdAt DateTime @default(now())

  admin     User     @relation(fields: [adminId], references: [id])

  @@index([createdAt(sort: Desc)])
}

model SiteSetting {
  key       String   @id
  value     Json
  updatedBy String?
  updatedAt DateTime @default(now())
}

// VietHawaii Platform - Prisma Schema
// Vietnamese-Hawaiian Community Platform

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== AUTH (NextAuth) ====================

model User {
  id              String    @id @default(uuid())
  name            String?
  email           String    @unique
  emailVerified   DateTime?
  image           String?
  passwordHash    String?
  phone           String?
  role            Role      @default(USER)
  preferredLang   String    @default("vn")
  trustScore      Int       @default(0)
  phoneVerified   Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  lastLogin       DateTime?

  accounts        Account[]
  sessions        Session[]
  listings        Listing[]
  articles        Article[]
  savedItems      SavedItem[]
  reviews         Review[]    @relation("ReviewAuthor")
  receivedReviews Review[]    @relation("ReviewTarget")
  reports         Report[]    @relation("Reporter")
  reviewedReports Report[]    @relation("Reviewer")
  transactions    Transaction[]
  businesses      Business[]
  adminLogs       AdminLog[]
  events          Event[]
  couponClaims    CouponClaim[]
  notifications   Notification[]  @relation("NotificationRecipient")
  actedNotifications Notification[] @relation("NotificationActor")
  conversations1  Conversation[]  @relation("ConversationParticipant1")
  conversations2  Conversation[]  @relation("ConversationParticipant2")
  sentMessages    Message[]       @relation("MessageSender")

  @@index([email])
  @@index([role])
  @@index([createdAt(sort: Desc)])
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  USER
  SELLER
  EDITOR
  MODERATOR
  ADMIN
  SUPERADMIN
}

// ==================== CATEGORIES ====================

model Category {
  id          Int        @id @default(autoincrement())
  parentId    Int?
  slug        String     @unique
  nameVn      String
  nameEn      String?
  icon        String?
  sortOrder   Int        @default(0)
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())

  parent      Category?  @relation("CategoryChildren", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryChildren")
  listings    Listing[]

  @@index([parentId])
  @@index([slug])
}

// ==================== LISTINGS ====================

model Listing {
  id              Int       @id @default(autoincrement())
  userId          String
  categoryId      Int
  neighborhoodId  Int?

  title           String
  titleEn         String?
  description     String?   @db.Text
  descriptionEn   String?   @db.Text

  price           Decimal?  @db.Decimal(12, 2)
  priceType       PriceType @default(FIXED)

  location        String?
  lat             Decimal?  @db.Decimal(10, 8)
  lng             Decimal?  @db.Decimal(11, 8)

  contactPhone    String?
  contactEmail    String?
  zaloNumber      String?
  hidePhone       Boolean   @default(false)
  preferredContact String?

  status          ListingStatus @default(PENDING)
  rejectionReason String?

  isFeatured      Boolean   @default(false)
  featuredUntil   DateTime?
  featuredTier    String?

  views           Int       @default(0)

  // Listing type for specialized sections
  listingType     ListingType @default(GENERAL)

  // Job-specific fields (optional)
  jobType         String?       // full-time, part-time, contract
  salary          String?       // salary range text
  benefits        String?       @db.Text

  // Housing-specific fields (optional)
  bedrooms        Int?
  bathrooms       Int?
  sqft            Int?
  petFriendly     Boolean?
  utilities       String?       // included/not included
  moveInDate      DateTime?

  // Service-specific fields (optional)
  serviceArea     String?
  availability    String?
  experience      String?

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  approvedAt      DateTime?
  expiresAt       DateTime?

  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category        Category  @relation(fields: [categoryId], references: [id])
  neighborhood    Neighborhood? @relation(fields: [neighborhoodId], references: [id])
  images          ListingImage[]
  tags            ListingTag[]
  savedBy         SavedItem[]
  reviews         Review[]
  reports         Report[]
  inquiries       Inquiry[]
  conversations   Conversation[]
  viewHistory     ListingView[]

  @@index([userId])
  @@index([listingType])
  @@index([categoryId])
  @@index([status])
  @@index([isFeatured])
  @@index([createdAt(sort: Desc)])
}

model ListingImage {
  id           Int      @id @default(autoincrement())
  listingId    Int
  imageUrl     String
  thumbnailUrl String?
  cloudinaryId String?
  isPrimary    Boolean  @default(false)
  sortOrder    Int      @default(0)
  createdAt    DateTime @default(now())

  listing      Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@index([listingId])
}

model ListingTag {
  listingId Int
  tag       String

  listing   Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@id([listingId, tag])
}

enum PriceType {
  FIXED
  HOURLY
  MONTHLY
  NEGOTIABLE
  FREE
}

enum ListingType {
  GENERAL       // Rao vặt (existing classifieds)
  JOB           // Việc làm
  HOUSING       // Nhà ở
  SERVICE       // Dịch vụ
}

enum ListingStatus {
  PENDING
  ACTIVE
  SOLD
  EXPIRED
  REJECTED
  FLAGGED
}

// ==================== NEIGHBORHOODS ====================

model Neighborhood {
  id                  Int      @id @default(autoincrement())
  slug                String   @unique
  name                String
  island              String   @default("Oahu")
  region              String?
  vietnameseCommunity String?
  avgRent1br          Int?
  avgRent2br          Int?
  lat                 Decimal? @db.Decimal(10, 8)
  lng                 Decimal? @db.Decimal(11, 8)
  descriptionVn       String?  @db.Text
  descriptionEn       String?  @db.Text

  listings            Listing[]
  businesses          Business[]
  events              Event[]
}

// ==================== ARTICLES / CONTENT ====================

model ContentCategory {
  id        Int         @id @default(autoincrement())
  slug      String      @unique
  nameVn    String
  nameEn    String?
  type      ContentType
  color     String?
  sortOrder Int         @default(0)
  isActive  Boolean     @default(true)

  articles  Article[]
}

model Article {
  id              Int           @id @default(autoincrement())
  authorId        String
  categoryId      Int
  slug            String        @unique

  titleVn         String
  titleEn         String?
  excerptVn       String?       @db.Text
  excerptEn       String?       @db.Text
  contentVn       String        @db.Text
  contentEn       String?       @db.Text

  featuredImage   String?
  videoUrl        String?
  videoThumbnail  String?

  contentType     ArticleType   @default(ARTICLE)
  status          ArticleStatus @default(DRAFT)

  isSponsored     Boolean       @default(false)
  sponsorName     String?
  sponsorLogo     String?

  views           Int           @default(0)

  seoTitle        String?
  seoDescription  String?

  publishedAt     DateTime?
  scheduledFor    DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  author          User          @relation(fields: [authorId], references: [id])
  category        ContentCategory @relation(fields: [categoryId], references: [id])
  tags            ArticleTag[]
  savedBy         SavedItem[]

  @@index([authorId])
  @@index([categoryId])
  @@index([status])
  @@index([publishedAt(sort: Desc)])
  @@index([slug])
}

model ArticleTag {
  articleId Int
  tag       String

  article   Article @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@id([articleId, tag])
}

enum ContentType {
  NEWS
  BLOG
  VLOG
  GUIDE
}

enum ArticleType {
  ARTICLE
  VLOG
  GUIDE
  SPONSORED
}

enum ArticleStatus {
  DRAFT
  PUBLISHED
  SCHEDULED
  ARCHIVED
}

// Additional indexes for Article performance
// Note: Main indexes are defined in the Article model above

// ==================== SAVED ITEMS ====================

model SavedItem {
  userId    String
  itemType  SavedItemType
  itemId    Int
  savedAt   DateTime      @default(now())

  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  listing   Listing?      @relation(fields: [itemId], references: [id], onDelete: Cascade, map: "SavedItem_listing_fkey")
  article   Article?      @relation(fields: [itemId], references: [id], onDelete: Cascade, map: "SavedItem_article_fkey")

  @@id([userId, itemType, itemId])
}

enum SavedItemType {
  LISTING
  ARTICLE
}

// ==================== REVIEWS ====================

model Review {
  id              Int      @id @default(autoincrement())
  reviewerId      String
  reviewedUserId  String
  listingId       Int?
  rating          Int
  reviewText      String?  @db.Text
  transactionType String?
  isVerified      Boolean  @default(false)
  createdAt       DateTime @default(now())

  reviewer        User     @relation("ReviewAuthor", fields: [reviewerId], references: [id])
  reviewedUser    User     @relation("ReviewTarget", fields: [reviewedUserId], references: [id])
  listing         Listing? @relation(fields: [listingId], references: [id])

  @@unique([reviewerId, listingId])
  @@index([reviewedUserId])
}

// ==================== REPORTS ====================

model Report {
  id           Int          @id @default(autoincrement())
  reporterId   String
  itemType     String
  itemId       Int
  reason       String
  details      String?      @db.Text
  status       ReportStatus @default(PENDING)
  reviewedById String?
  reviewedAt   DateTime?
  actionTaken  String?
  createdAt    DateTime     @default(now())

  reporter     User         @relation("Reporter", fields: [reporterId], references: [id])
  reviewedBy   User?        @relation("Reviewer", fields: [reviewedById], references: [id])
  listing      Listing?     @relation(fields: [itemId], references: [id])

  @@index([status])
}

enum ReportStatus {
  PENDING
  REVIEWED
  ACTIONED
  DISMISSED
}

// ==================== INQUIRIES ====================

model Inquiry {
  id         Int      @id @default(autoincrement())
  listingId  Int
  senderId   String?
  message    String   @db.Text
  phone      String?
  email      String?
  status     String   @default("new")
  createdAt  DateTime @default(now())

  listing    Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@index([listingId])
}

// ==================== BUSINESS DIRECTORY ====================

model Business {
  id              Int          @id @default(autoincrement())
  ownerId         String
  name            String
  slug            String       @unique
  category        String
  descriptionVn   String?      @db.Text
  descriptionEn   String?      @db.Text
  address         String?
  neighborhoodId  Int?
  phone           String?
  email           String?
  website         String?
  hours           Json?
  photos          Json?
  tier            BusinessTier @default(FREE)
  tierExpiresAt   DateTime?
  isVerified      Boolean      @default(false)
  rating          Decimal?     @db.Decimal(3, 2)
  reviewCount     Int          @default(0)
  views           Int          @default(0)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  owner           User         @relation(fields: [ownerId], references: [id])
  neighborhood    Neighborhood? @relation(fields: [neighborhoodId], references: [id])
  reviews         BusinessReview[]
  coupons         Coupon[]

  @@index([category])
  @@index([tier])
}

model BusinessReview {
  id           Int      @id @default(autoincrement())
  businessId   Int
  userId       String
  rating       Int
  reviewText   String?  @db.Text
  photos       Json?
  helpfulCount Int      @default(0)
  createdAt    DateTime @default(now())

  business     Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  @@index([businessId])
}

enum BusinessTier {
  FREE
  ENHANCED
  PREMIUM
}

// ==================== EVENTS ====================

model Event {
  id              Int           @id @default(autoincrement())
  userId          String
  title           String
  titleEn         String?
  description     String?       @db.Text
  descriptionEn   String?       @db.Text
  eventType       EventType
  startDate       DateTime
  endDate         DateTime?
  isAllDay        Boolean       @default(false)
  isRecurring     Boolean       @default(false)
  recurrenceRule  String?       // iCal RRULE format
  location        String?
  address         String?
  neighborhoodId  Int?
  lat             Decimal?      @db.Decimal(10, 8)
  lng             Decimal?      @db.Decimal(11, 8)
  contactPhone    String?
  contactEmail    String?
  website         String?
  imageUrl        String?
  ticketUrl       String?
  price           Decimal?      @db.Decimal(10, 2)
  isFree          Boolean       @default(true)
  status          EventStatus   @default(PENDING)
  views           Int           @default(0)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  user            User          @relation(fields: [userId], references: [id])
  neighborhood    Neighborhood? @relation(fields: [neighborhoodId], references: [id])

  @@index([userId])
  @@index([eventType])
  @@index([status])
  @@index([startDate])
}

enum EventType {
  FESTIVAL        // Tết, Vietnamese festivals
  COMMUNITY       // Community meetups
  RELIGIOUS       // Church/temple events
  CULTURAL        // Cultural events
  BUSINESS        // Business networking
  OTHER
}

enum EventStatus {
  PENDING
  APPROVED
  CANCELLED
  COMPLETED
}

// ==================== COUPONS ====================

model Coupon {
  id              Int           @id @default(autoincrement())
  businessId      Int
  title           String
  titleEn         String?
  description     String?       @db.Text
  code            String?
  discountType    DiscountType
  discountValue   Decimal       @db.Decimal(10, 2)
  minPurchase     Decimal?      @db.Decimal(10, 2)
  maxUses         Int?
  usedCount       Int           @default(0)
  startDate       DateTime
  endDate         DateTime
  imageUrl        String?
  terms           String?       @db.Text
  isActive        Boolean       @default(true)
  createdAt       DateTime      @default(now())

  business        Business      @relation(fields: [businessId], references: [id])
  claims          CouponClaim[]

  @@index([businessId])
  @@index([endDate])
  @@index([isActive])
}

model CouponClaim {
  id        Int       @id @default(autoincrement())
  couponId  Int
  userId    String
  claimedAt DateTime  @default(now())
  usedAt    DateTime?

  coupon    Coupon    @relation(fields: [couponId], references: [id])
  user      User      @relation(fields: [userId], references: [id])

  @@unique([couponId, userId])
  @@index([couponId])
  @@index([userId])
}

enum DiscountType {
  PERCENTAGE
  FIXED_AMOUNT
  FREE_ITEM
}

// ==================== LISTING ANALYTICS ====================

model ListingView {
  id        Int      @id @default(autoincrement())
  listingId Int
  userId    String?
  sessionId String?
  referrer  String?
  viewedAt  DateTime @default(now())

  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@index([listingId, viewedAt])
  @@index([listingId])
  @@index([viewedAt(sort: Desc)])
}

// ==================== MONETIZATION ====================

model FeaturedPackage {
  id           Int      @id @default(autoincrement())
  nameVn       String
  nameEn       String?
  durationDays Int
  price        Decimal  @db.Decimal(10, 2)
  benefits     Json?
  isActive     Boolean  @default(true)
  sortOrder    Int      @default(0)
}

model Transaction {
  id              Int      @id @default(autoincrement())
  userId          String
  type            String
  referenceType   String?
  referenceId     Int?
  amount          Decimal  @db.Decimal(10, 2)
  currency        String   @default("USD")
  stripePaymentId String?
  stripeInvoiceId String?
  status          String   @default("pending")
  createdAt       DateTime @default(now())

  user            User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([createdAt(sort: Desc)])
}

// ==================== ANALYTICS ====================

model PageView {
  id        Int      @id @default(autoincrement())
  pageType  String
  pageId    Int?
  userId    String?
  sessionId String?
  referrer  String?
  viewedAt  DateTime @default(now())

  @@index([viewedAt(sort: Desc)])
  @@index([pageType, pageId])
}

model ToolUsage {
  id         Int      @id @default(autoincrement())
  toolSlug   String
  userId     String?
  sessionId  String?
  inputs     Json?
  completed  Boolean  @default(false)
  ctaClicked Boolean  @default(false)
  referrer   String?
  createdAt  DateTime @default(now())

  @@index([toolSlug])
  @@index([createdAt(sort: Desc)])
}

// ==================== ADMIN ====================

model AdminLog {
  id        Int      @id @default(autoincrement())
  adminId   String
  action    String
  itemType  String?
  itemId    Int?
  details   Json?
  createdAt DateTime @default(now())

  admin     User     @relation(fields: [adminId], references: [id])

  @@index([createdAt(sort: Desc)])
}

model SiteSetting {
  key       String   @id
  value     Json
  updatedBy String?
  updatedAt DateTime @default(now())
}

// ==================== NOTIFICATIONS ====================

model Notification {
  id              Int              @id @default(autoincrement())
  userId          String           // User who receives the notification
  type            NotificationType
  title           String
  titleEn         String?
  message         String
  messageEn       String?

  // Reference to related entity
  referenceType   String?          // 'listing', 'event', 'coupon', etc.
  referenceId     Int?
  referenceUrl    String?          // Direct URL to navigate to

  // Actor (who triggered the notification)
  actorId         String?
  actorName       String?

  isRead          Boolean          @default(false)
  readAt          DateTime?
  createdAt       DateTime         @default(now())

  user            User             @relation("NotificationRecipient", fields: [userId], references: [id], onDelete: Cascade)
  actor           User?            @relation("NotificationActor", fields: [actorId], references: [id])

  @@index([userId, isRead])
  @@index([userId, createdAt(sort: Desc)])
}

// ==================== MESSAGING ====================

model Conversation {
  id            Int       @id @default(autoincrement())
  participant1Id String
  participant2Id String
  listingId     Int?      // Optional: conversation about a specific listing
  lastMessageAt DateTime  @default(now())
  createdAt     DateTime  @default(now())

  participant1  User      @relation("ConversationParticipant1", fields: [participant1Id], references: [id], onDelete: Cascade)
  participant2  User      @relation("ConversationParticipant2", fields: [participant2Id], references: [id], onDelete: Cascade)
  listing       Listing?  @relation(fields: [listingId], references: [id], onDelete: SetNull)
  messages      Message[]

  @@unique([participant1Id, participant2Id, listingId])
  @@index([participant1Id, lastMessageAt(sort: Desc)])
  @@index([participant2Id, lastMessageAt(sort: Desc)])
  @@index([listingId])
}

model Message {
  id             Int      @id @default(autoincrement())
  conversationId Int
  senderId       String
  content        String   @db.Text
  isRead         Boolean  @default(false)
  createdAt      DateTime @default(now())

  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender         User         @relation("MessageSender", fields: [senderId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt(sort: Desc)])
  @@index([senderId])
}

enum NotificationType {
  LISTING_APPROVED      // Your listing was approved
  LISTING_REJECTED      // Your listing was rejected
  LISTING_SAVED         // Someone saved your listing
  LISTING_INQUIRY       // Someone inquired about your listing
  NEW_MESSAGE           // Someone sent you a new message
  LISTING_EXPIRING      // Your listing is about to expire
  EVENT_APPROVED        // Your event was approved
  EVENT_REMINDER        // Reminder for upcoming event
  COUPON_NEW            // New coupon from a business you follow
  SYSTEM                // System announcements
}
